@model Planets.ViewModels.MessageFromUserVM
@{
    ViewBag.Title = "Contact";
}



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/StyleContact.css" />

</head>
<body>
    <header>
        <h2> Kontakt </h2>
    </header>

    <h3>
        Jeżeli chcesz podzielić się jakimiś informacjami z twórcami tej strony,
        napisz wiadomość
    </h3>

    <div class="container" style="width:60%; margin-top:5%">

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            <!-- okno do wpisania wiadomości, max 360 znaków -->
            <div id="textArea">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 6, cols = 60, maxlength = 360, @placeholder = "Treść" })
            </div>

            <!-- okno gdzie należy wpisać swój nick, max 32 znaki-->

            @Html.TextBoxFor(model => model.Author, new { @class = "form-control", maxlength = 32, @placeholder = "Autor" })


            <input class="btn-block btn-primary" id="SendMsgButton" name="buttonSubmit" type="submit" value="Wyśsij wiadomość" />


        }

    </div>



</body>
</html>
